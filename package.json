{
  "name": "@leosingleton/commonlibs",
  "version": "1.10.0",
  "author": "Leo C. Singleton IV <leo@leosingleton.com>",
  "description": "Common Libraries for TypeScript and .NET Core",
  "homepage": "https://github.com/leosingleton/commonlibs-ts",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/commonlibs-ts.git"
  },
  "dependencies": {
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@types/jasmine": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-leosingleton": "leosingleton/eslint-config-leosingleton",
    "eslint-plugin-github": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "flow-bin": "latest",
    "glob": "latest",
    "graphql": "latest",
    "jasmine-core": "latest",
    "jest": "latest",
    "jest-junit": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-jasmine": "latest",
    "karma-junit-reporter": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "scripts": {
    "build": "npx tsc",
    "clean": "rm -rf ./build",
    "lint": "npx eslint . --ext js,ts",
    "npm-upgrade": "rm -rf ./package-lock.json ./node_modules && npm install",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "npx webpack --mode=development --config=webpack.test.js && npx karma start",
    "test:browser:debug": "npx webpack --mode=development --config=webpack.test.js && npx karma start --single-run=false --browsers Chrome",
    "test:node": "npx jest --config=jest.node.config.js --maxWorkers=2 --coverage"
  },
  "files": [
    "build/dist/"
  ],
  "main": "build/dist/index.js",
  "types": "build/dist/index.d.ts"
}
