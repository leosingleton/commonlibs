  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/commonlibs-ts.git"
  },
  "devDependencies": {
    "@types/jasmine": "^3.5.2",
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/experimental-utils": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-formatter-autolinkable-stylish": "^1.1.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsdoc": "^21.0.0",
    "glob": "^7.1.6",
    "jasmine-core": "^3.5.0",
    "jest": "^24.9.0",
    "jest-junit": "^6.4.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-junit-reporter": "^1.2.0",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "build": "npx webpack --mode=none",
    "lint": "npx eslint \"**/*.ts\" \"**/*.js\"",
    "test": "npm run test:node && npm run test:web",
    "test:node": "npx jest --config=jest.node.config.js --maxWorkers=2 --coverage",
    "test:web": "npx webpack --mode=development --config=webpack.test.js && npx karma start",
    "test:web:debug": "npx webpack --mode=development --config=webpack.test.js && npx karma start --single-run=false --browsers Chrome"
  },
  "files": [
    "build/dist/"
  ],
  "main": "build/dist/index.js",
  "types": "build/dist/index.d.ts"
}
