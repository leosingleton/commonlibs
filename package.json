{
  "name": "@leosingleton/commonlibs",
  "version": "1.4.0-alpha",
  "author": "Leo C. Singleton IV <leo@leosingleton.com>",
  "description": "Common Libraries for TypeScript and .NET Core",
  "homepage": "https://github.com/leosingleton/commonlibs-ts",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/leosingleton/commonlibs-ts.git"
  },
  "devDependencies": {
    "@types/jasmine": "latest",
    "@types/jest": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-plugin-github": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "glob": "latest",
    "jasmine-core": "latest",
    "jest": "latest",
    "jest-junit": "latest",
    "karma": "latest",
    "karma-chrome-launcher": "latest",
    "karma-jasmine": "latest",
    "karma-junit-reporter": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "typescript": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "scripts": {
    "build": "npx webpack --mode=none",
    "lint": "npx eslint \"**/*.ts\" \"**/*.js\"",
    "test": "npm run test:node && npm run test:web",
    "test:node": "npx jest --config=jest.node.config.js --maxWorkers=2 --coverage",
    "test:web": "npx webpack --mode=development --config=webpack.test.js && npx karma start",
    "test:web:debug": "npx webpack --mode=development --config=webpack.test.js && npx karma start --single-run=false --browsers Chrome"
  },
  "files": [
    "build/dist/"
  ],
  "main": "build/dist/index.js",
  "types": "build/dist/index.d.ts"
}
